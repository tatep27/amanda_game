{
  "name": "amanda",
  "private": true,
  "version": "0.1.0",
  "description": "A 2D web game with multiplayer support",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "build": "npm install --workspace=client && npm run build --workspace=client",
    "install:all": "npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

